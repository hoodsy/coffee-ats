/*
 * Styles for User & Opportunity detail views
 */

.detail-tags-list
  list-style-type none
  margin 2em 0
  padding 0
  display flex
  flex-direction row
  justify-content space-between
  flex-wrap wrap

  >li
    text-transform uppercase
    flex-basis 30%
    margin .25em .5em
    padding .6em

    &:nth-child(even)
      flex-grow 2
