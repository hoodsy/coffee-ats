@import 'layout'

/*
 * Styles for User & Opportunity detail views
 */

.detail-tags-list
  margin 2em 0
  padding 0 1em
  display flex
  flex-direction row
  justify-content space-between
  flex-wrap wrap

  >li
    position relative
    flex-basis 30%
    margin .25em .5em
    padding .6em

    &:nth-child(even)
      flex-grow 2

    & > .tag-delete-btn
      position absolute
      visibility hidden
      right -.5em
      top -.5em

    &:hover
      cursor pointer

      & > .tag-delete-btn
        visibility visible

.detail-container
  max-height 100%
  overflow-y auto

.detail-body
  margin 0 0 2em 0

.detail-header
  position relative
