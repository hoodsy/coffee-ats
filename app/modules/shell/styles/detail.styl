@import 'layout'

/*
 * Styles for User & Opportunity detail views
 */

.detail-tags-list
  margin 2em 0
  padding 0 1em
  display flex
  flex-direction row
  justify-content space-between
  flex-wrap wrap

  >li
    flex-basis 30%
    margin .25em .5em
    padding .6em

    &:nth-child(even)
      flex-grow 2


.detail-container
  max-height 100%
  overflow-y auto

.detail-body
  margin 0 0 2em 0

.detail-header
  position relative
