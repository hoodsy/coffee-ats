@import 'colors'
@import 'layout'

tags-height = 2em
card-quote-height = 17.5em
img-height = 5em
card-main-text-height = 3em
card-main-height = card-main-text-height + img-height
card-height = card-main-height + card-quote-height + tags-height


img-height = 3.75em
card-img-container-height = 6.25em
card-quote-height-xs = 5em
card-main-text-height-xs = 5.5em

// Delete ?
card-main-height-xs = card-main-text-height-xs + card-quote-height-xs + card-img-container-height
card-height-xs = card-main-height-xs + tags-height


@media (max-width: screen-xs-max)
  .user-card,
  .opportunity-card

    .card-img-container
      height card-img-container-height

      img.rounded
        border-radius 50%
        height img-height
        width img-height

    .quote
      height card-quote-height-xs

    .card-main-text
      height card-main-text-height-xs


@media (min-width: screen-sm-min)
  .user-card,
  .opportunity-card
    height card-height

    .card-main
      height card-main-height
      padding 0 2em

      img.rounded
        border-radius 50%
        height img-height
        width img-height
        position relative
        top -2.5em

      .card-main-text
        height card-main-text-height
        position relative
        top -1.25em

  .card-main-top
    background-color color-white
    color color-text
    height 245px
    padding 0 3em
    line-height 1.5em


// Is already liked checkmark
.feed-is-liked
  display block
  position absolute
  top 1em
  left 2em


/*
 * Like button (i.e. coffee mug)
 */

.btn-like,
.btn-dislike
  font-size 3em
  visibility hidden
  position relative
  top -2.5em

  .fa-circle
    color color-bg

  .fa-check,
  .fa-times
    color color-text

// Display like button when hovering
@media (min-width: screen-sm-min)
  .card-shadow:hover
    .btn-like,
    .btn-dislike
      visibility visible


/*
 * Sliding effect on a Like / Delete action
 */

.card-shadow
  // Allows the slide left effect to be occulted by card dimensions
  overflow hidden
  cursor pointer

.card-main.like-slide,
.tags-container.like-slide
  animation-name like-slide
  animation-fill-mode forwards
  animation-duration .4s

@keyframes like-slide
  to
    padding-left 90%
    margin-right -90%
    opacity 0

.card-main.ask-delete-slide,
.tags-container.ask-delete-slide
  animation-name ask-delete-slide
  animation-fill-mode forwards
  animation-duration .4s

@keyframes ask-delete-slide
  to
    padding-right 90%
    margin-left -90%
    opacity 0


/*
 * Tags
 */

.tags-container
  height tags-height

.tags-list
  font-size .8em
  height 100%
  display flex
  flex-direction row
  justify-content space-between

  .uppercase
    line-height 2.4em

  li
    padding 0 1em
    border-left 1px solid color-grey-80

    &:first-child
      border-left none

    &:nth-child(even)
      flex-grow 2


/*
 * Inter-card margins
 */

@media (max-width: screen-xs-max)
  [data-coffee-card],
  [data-opportunity-post-card]
    margin-bottom 1px

@media (min-width: screen-sm-min)
  [data-coffee-card],
  [data-opportunity-post-card]
    margin-bottom 1em

