@import 'colors'

/* Remove Bootstrap gutter spacing on mobile */
@media (max-width: 767px)
  .feed-container > .row
    margin-left 0
    margin-right 0
  .col-lg-4[data-coffee-card]
    padding-left 0
    padding-right 0
    margin-bottom 1px

@media (min-width: 768px)
  .coffee-card
    box-shadow 1px 1px 2px color-grey-50, -1px 1px 2px color-grey-50
    transition transform .1s ease-out

    &:hover
      box-shadow 2px 2px 2px color-grey-50, -2px 2px 2px color-grey-50
      transform scale(1.01)
      cursor pointer

.tags-list
  font-size .8em
  line-height 2.4em
  height 100%
  list-style-type none
  margin 0
  padding 0
  display flex
  flex-direction row
  justify-content flex-start

  li
    float left
    padding 0 1em
    height 100%
    border-left 1px solid color-grey-80

    @media (max-width: 767px)
      margin auto

    &:first-child
      border-left none

    &:nth-child(2)
      flex-grow 2
