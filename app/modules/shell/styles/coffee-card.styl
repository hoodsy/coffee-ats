@import 'colors'

@media (max-width: 767px)
  .tags-container
    width 100%

  [data-coffee-card],
  [data-opportunity-post-coffee-card]
    margin-bottom 1px

.tags-container
    position absolute
    bottom 0

@media (min-width: 768px)
  .tags-container
    width 470px

  .card-shadow
    box-shadow 1px 1px 2px color-grey-50, -1px 1px 2px color-grey-50
    transition transform .1s ease

    &:hover
      box-shadow 2px 2px 2px color-grey-50, -2px 2px 2px color-grey-50
      transform scale(1.01)
      cursor pointer

  [data-coffee-card],
  [data-opportunity-post-coffee-card]
    margin-bottom 1em

@media (min-width: 992px)
  .tags-container
    width 455px

@media (min-width: 1200px)
  .tags-container
    width 360px

[class*="-coffee-card"]
  height 200px

.opportunity-post-card,
.add-opportunity-post-card
  height 150px

.tags-list
  font-size .8em
  line-height 2.4em
  height 100%
  list-style-type none
  margin 0
  padding 0
  display flex
  flex-direction row
  justify-content space-between

  li
    padding 0 1em
    border-left 1px solid color-grey-80

    &:first-child
      border-left none

    &:nth-child(even)
      flex-grow 2
