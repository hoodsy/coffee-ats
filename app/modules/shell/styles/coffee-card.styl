@import 'colors'

.btn-like
  visibility hidden
  position absolute
  top .5em
  right .5em

.feed-is-liked
  display block
  position absolute
  top .25em
  left .25em

@media (max-width: 767px)
  .tags-container
    width 100%

  [data-coffee-card],
  [data-opportunity-post-card]
    margin-bottom 1px

.tags-container
  position absolute
  bottom 0

/*
 * Sliding effect on a Like action
 */
.card-main.like-slide,
.tags-container.like-slide
  animation-name like-slide
  animation-fill-mode forwards
  animation-duration .4s

@keyframes like-slide
  to
    padding-left 90%
    margin-right -90%
    opacity 0

/*
 * Sliding effect on a Delete action
 */
.card-main.ask-delete-slide,
.tags-container.ask-delete-slide
  animation-name ask-delete-slide
  animation-fill-mode forwards
  animation-duration .4s

@keyframes ask-delete-slide
  to
    padding-right 90%
    margin-left -90%
    opacity 0


@media (min-width: 768px)
  .tags-container
    width 470px

  // Box shadow and hover effect
  .card-shadow
    box-shadow 1px 1px 2px color-grey-50, -1px 1px 2px color-grey-50
    transition transform .1s ease

    &:hover
      box-shadow 2px 2px 2px color-grey-50, -2px 2px 2px color-grey-50
      transform scale(1.01)
      cursor pointer

      // Display like button when hovering
      .btn-like
        visibility visible

  [data-coffee-card],
  [data-opportunity-post-card]
    margin-bottom 1em

[data-user-card],
[data-opportunity-card]
  // Allows the slide left effect to be occulted by card dimensions
  overflow hidden


@media (min-width: 992px)
  .tags-container
    width 455px

@media (min-width: 1200px)
  .tags-container
    width 360px

[data-coffee-card],
.user-card,
.opportunity-card
  position relative
  height 200px

.tags-list
  font-size .8em
  line-height 2.4em
  height 100%
  list-style-type none
  margin 0
  padding 0
  display flex
  flex-direction row
  justify-content space-between

  li
    padding 0 1em
    border-left 1px solid color-grey-80

    &:first-child
      border-left none

    &:nth-child(even)
      flex-grow 2
