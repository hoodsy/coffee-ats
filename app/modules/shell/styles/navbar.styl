@import 'colors'
@import 'layout'

navbar-height = 55px

//nav.navbar.navbar-fixed-top
//  border none

ul.nav
  display flex
  flex-direction row
  justify-content space-between

  > li
    text-align center
    float left

ul.navbar-nav > li > a
  line-height 30px

  &.nav-active
    color color-grey-30
    border-bottom 5px solid color-grey-30

@media (max-width: screen-xs-max)
  ul.navbar-nav.nav
    margin 0

    > li
      width 25%

div.main-content[data-ui-view="main"]
  position relative

  // Navbar is fixed so move up the main content
  @media (max-width: screen-xs-max)
    width 100%
    position absolute
    height 'calc(100% - %s)' % navbar-height
    bottom navbar-height
    overflow-y auto
    -webkit-overflow-scrolling touch

// User profile icon
img.avatar
  height 30px
  width 30px
  border-radius 50% 50%

// User unread notifications
span.unread-notifications
  position absolute
  top 1.5em
  background-color red
  border-radius 50% 50%
  width 1.5em
  height 1.5em
  font-size .5em
  line-height 1.5em
  color white

  @media (min-width: screen-sm-min)
    left 3.25em

  @media (max-width: screen-xs-max)
    right 41%

  @media (max-width: screen-iphone5-max)
    right 32%
