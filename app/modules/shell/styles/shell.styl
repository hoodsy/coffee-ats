@import 'layout'

ul
  list-style-type none
  margin 0
  padding 0

/*
 * Headers
 */

h1, h2, h3, h4, h5, h6
  &.header
    margin 1.6em 0


/* Remove gutters on mobile views */
@media (max-width: screen-xs-max)
  .main-content .container
    padding-left 0
    padding-right 0

  .xs-clear-padding[class^="col-"]
    padding-left 0
    padding-right 0

  .xs-clear-margin.row
    margin-left 0
    margin-right 0

.clear-padding[class*="col-"]
  padding-left 0
  padding-right 0

.clear-margin.row
  margin-left 0
  margin-right 0

.flex-center,
.flex-center-vert,
.flex-center-vert-around
  display flex
  flex-direction column
  justify-content center
  height 100%

.flex-center
  align-items center

.flex-center-vert-around
  justify-content space-around

.quote
  margin 1em 0

.uppercase
  text-transform uppercase

img.avatar
  height 30px
  width 30px
  border-radius 2px

.height-100
  height 100%
