@import 'layout'
@import 'colors'

body,
html
  height 100%

body
  background-position 50% 50%
  background-repeat repeat

ul
  list-style-type none
  margin 0
  padding 0

ul.row
  margin 0

h2, h3, h4, h5, h6
  margin .8em 0 !important

h1
  margin 1.6em 0 !important


img.rounded
  border-radius 50%
  height: 3.75em
  width: 3.75em

@font-face
  font-family 'seravek'
  src url('../fonts/seravek.ttf') format('truetype')

.uppercase
  font-family 'seravek', Helvetica, sans-serif
  text-transform lowercase
  font-variant small-caps
  letter-spacing .05em
  line-height 1em

  @media (min-width: screen-sm-min)
    letter-spacing .075em

/* Remove gutters on mobile views */
@media (max-width: screen-xs-max)
  div.container
    padding-left 0
    padding-right 0

  .xs-clear-padding[class^="col-"]
    padding-left 0
    padding-right 0

  .xs-clear-margin.row
    margin-left 0
    margin-right 0

.clear-padding[class*="col-"]
  padding-left 0
  padding-right 0

.row.clear-margin
  margin-left 0
  margin-right 0

.flex-center,
.flex-center-vert,
.flex-center-vert-around
  display flex
  flex-direction column
  justify-content center
  height 100%

.flex-center
  align-items center

.flex-center-vert-around
  justify-content space-around

.height-100
  height 100%

.height-50
  height 50%

.width-100.width-100
  width 100%

.white-bg
  background-color white

  @media (max-width: screen-xs-max)
    border-top 1px solid color-grey-80
    border-bottom 1px solid color-grey-80

  @media (min-width: screen-sm-min)
    border 1px solid color-grey-80


@media (min-width: screen-sm-min)
  .row.half-margin-right
    margin-right -0.5em

  .row.half-margin-left
    margin-left -0.5em

.loading-container
  height 3em

.alt-img
  color color-grey-30
