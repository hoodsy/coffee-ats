@import 'layout'
@import 'colors'

body
  background url("data:image/png;base64,iVBORw0KGgoAAAANSUhEUgAAAMgAAADICAYAAACtWK6eAAAgAElEQâ€¦XWvobT4sf6JTyqUvWDmRI1Uqidr2Vscdk3bO06uDH2Xv8BA7rgSW4MiGsAAAAASUVORK5CYII=") 50% 50% repeat rgb(249, 249, 249) !important;

ul
  list-style-type none
  margin 0
  padding 0

h1, h2, h3, h4, h5, h6
  &.header
    margin 1.6em 0

img.rounded
  border-radius 50%
  height: 3.75em
  width: 3.75em

@font-face
  font-family 'seravek'
  src url('../fonts/seravek.ttf') format('truetype')

.uppercase
  font-family 'seravek', Helvetica, sans-serif
  text-transform lowercase
  font-variant small-caps
  letter-spacing .05em
  line-height 1em

  @media (min-width: screen-sm-min)
    letter-spacing .075em

/* Remove gutters on mobile views */
@media (max-width: screen-xs-max)
  .main-content .container
    padding-left 0
    padding-right 0

  .xs-clear-padding[class^="col-"]
    padding-left 0
    padding-right 0

  .xs-clear-margin.row
    margin-left 0
    margin-right 0

.clear-padding[class*="col-"]
  padding-left 0
  padding-right 0

.row.clear-margin
  margin-left 0
  margin-right 0

.flex-center,
.flex-center-vert,
.flex-center-vert-around
  display flex
  flex-direction column
  justify-content center
  height 100%

.flex-center
  align-items center

.flex-center-vert-around
  justify-content space-around

.quote
  margin 1em 0

.height-100
  height 100%

.height-50
  height 50%

.width-100.width-100
  width 100%

.white-bg
  background-color white

  @media (min-width: screen-sm-min)
    border 1px solid color-grey-80 !important
