@import 'colors'
@import 'layout'

ul
  list-style-type none
  margin 0
  padding 0

/*
 * Navbar
 */

nav.navbar.navbar-fixed-top
  border none

#navbar > .navbar-nav > li > a
  line-height 30px

ul.nav
  display flex
  flex-direction row
  justify-content space-between

  > li
    text-align center
    float left

ul.navbar-nav >  li > a.nav-active
  color color-green-2
  border-bottom 5px solid color-green-2

@media (max-width: screen-xs-max)
  ul.navbar-nav.nav
    margin 0

    > li
      width 25%

    .fa
      font-size 1.5em

/* Navbar is fixed so move down the main content with a margin */
.main-content
  position absolute
  width 100%
  height calc(100% - 55px)
  top 55px
  overflow-y auto
  -webkit-overflow-scrolling touch

/*
 * Headers
 */

h1, h2, h3, h4, h5, h6
  &.header
    margin 1.6em 0


/* Remove gutters on mobile views */
@media (max-width: screen-xs-max)
  .main-content .container
    padding-left 0
    padding-right 0

  .xs-clear-padding[class^="col-"]
    padding-left 0
    padding-right 0

  .xs-clear-margin.row
    margin-left 0
    margin-right 0

.clear-padding[class*="col-"]
  padding-left 0
  padding-right 0

.clear-margin.row
  margin-left 0
  margin-right 0

.flex-center,
.flex-center-vert,
.flex-center-vert-around
  display flex
  flex-direction column
  justify-content center
  height 100%

.flex-center
  align-items center

.flex-center-vert-around
  justify-content space-around

.quote
  margin 1em 0

.uppercase
  text-transform uppercase

img.avatar
  height 30px
  width 30px
  border-radius 2px

.height-100
  height 100%
