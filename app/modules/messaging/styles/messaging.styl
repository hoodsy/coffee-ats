@import 'colors'

border-color = color-grey-80

.matches-list
  list-style-type none
  margin 0
  padding 0

.matches-list-item
    border-bottom 1px solid border-color

.match-card
  height 175px
  position relative
  left 0
  transition left .2s ease-in-out

  &.slide-left
    position relative
    left -200px

.match-latest-message
  text-overflow ellipsis
  white-space nowrap
  overflow hidden

.match-unread-badge
  height .75em
  width .75em
  position relative
  top -.75em
  right -1em
  border-radius 50%
  background-color color-green-1


// Controls revealed on the right side of match card
.detail-controls
  position absolute
  right 0
  transition right .2s ease-in-out

  &.grow[class*='col-']
    position absolute
    right -200px
