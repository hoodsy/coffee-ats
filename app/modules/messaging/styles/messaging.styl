@import 'colors'

border-color = color-grey-80

/*
 * Matches
 */

.matches-list-item
  border-bottom 1px solid border-color

.match-card
  height 9em
  position relative
  left 0
  transition left .2s ease-in-out

  &.slide-left
    position relative
    left -200px

.match-latest-message
  text-overflow ellipsis
  white-space nowrap
  overflow hidden

.match-unread-badge
  height .75em
  width .75em
  position relative
  top -.75em
  right -1em
  border-radius 50%
  background-color color-green-1

.match-card-detail,
.match-card-avatar
  cursor pointer
  height 100%

.match-card-detail > div
  margin .25em 0

// Controls revealed on the right side of match card
.match-card-controls
  position absolute
  right 0
  transition right .2s ease-in-out

  &.grow[class*='col-']
    position absolute
    right -200px
