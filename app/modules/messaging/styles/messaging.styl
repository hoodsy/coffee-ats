@import 'colors'

border-color = color-grey-80

.row.messaging-title
  color color-white
  background color-grey-50
  height 75px

// Adjust form container to clear the submit button
.row.messaging-detail
  position absolute
  bottom 36px

  @media (max-width 767px)
    top 75px
    height calc(100% - 36px - 75px)

  @media (min-width 768px)
    top 0
    bottom 5em
    height calc(100% - 60px)

.row.messaging-detail,
.row.messaging-detail-input
  width 100%

  @media (min-width: 768px)
    width 750px

  @media (min-width: 992px)
    width 970px

  @media (min-width: 1200px)
    width 1170px


.well.messaging-detail-well
  position absolute
  height 100%
  overflow-y auto

div.messaging-detail-profile
  float right
  height 100%
  overflow-y auto

.messaging-detail-input
  position absolute
  bottom 0
  height 36px

  @media (min-width 768px)
    height 60px
    padding 12px 0

/*
 * Messages
 */
img.message-image
  height 1.5em
  width 1.5em

.user-message
  position relative
  text-align right

  .chat-bubble
    background-color color-green-2

  .chat-bubble:after
    border-color transparent color-green-2
    border-width: .5em 0 .5em .5em
    right .5em
    top .25em
    left initial

.chat-bubble
  display inline-block
  padding .5em
  background color-white

.chat-bubble:after
  content ''
  position absolute
  border-style solid
  border-width .5em .5em .5em 0
  border-color transparent #FFFFFF
  z-index 1
  left .5em
  top .25em
  height 0
  width 0

/*
 * Matches
 */

.matches-list-item
    border-bottom 1px solid border-color

.match-card
  height 175px
  position relative
  left 0
  transition left .2s ease-in-out

  &.slide-left
    position relative
    left -200px

.match-latest-message
  text-overflow ellipsis
  white-space nowrap
  overflow hidden

.match-unread-badge
  height .75em
  width .75em
  position relative
  top -.75em
  right -1em
  border-radius 50%
  background-color color-green-1

.match-card-detail,
.match-card-avatar
  cursor pointer
  height 100%

// Controls revealed on the right side of match card
.match-card-controls
  position absolute
  right 0
  transition right .2s ease-in-out

  &.grow[class*='col-']
    position absolute
    right -200px
