@import 'colors'

border-color = color-grey-30

.edit-table
  table-layout fixed
  border-collapse collapse
  border 1px solid border-color

.edit-row
  height 100px

  &:first-child
    >.edit-col
      border-top 1px solid border-color

  >.edit-col
    height 100%
    border-bottom 1px solid border-color

    &:first-child
      border-right 1px solid border-color

    @media (min-width: 768px)

      &:first-child
        border-left 1px solid border-color

      &:last-child
        border-right 1px solid border-color


@media (max-width: 767px)
  .edit-row:last-child
    >.edit-col
      border-bottom none

  // Fix the edit button along the bottom
  .edit-submit-btn
    position fixed
    bottom 0
    height 36px

  // Adjust form container to clear the submit button
  .edit-form
    height calc(100% - 36px)
    bottom 36px
    overflow-y scroll
    -webkit-overflow-scrolling auto

.edit-quote
  position absolute
  left -.5em
  top 0

.edit-sub-row
  border-bottom 1px solid color-grey-80
  line-height 1.8em
  height 33.33%

  &:last-child
    border-bottom none

.edit-page-header
  color color-white
  background-color color-grey-50

button.edit-page-btn
  display block
  height 100%

.edit-add-btn
  width 100%
  background color-white
  border-bottom 1px solid border-color
  border-left none
  border-right none
  border-top none

  @media (min-width: 768px)
    border-left 1px solid border-color
    border-right 1px solid border-color

.edit-delete-btn
  position absolute
  top .5em
  left .5em

  &:hover
    cursor pointer
