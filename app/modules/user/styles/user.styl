@import 'colors'

.user-experience-list,
.user-education-list,
.education-data-list,
.experience-data-list,
.user-tags-list
  list-style-type none
  margin 0
  padding 0

.user-coffee-card
  padding 1em 0 0 0

/*
 * User's tags
 */

.tags-container
  margin-top 20px
  height 2em

.tag-octothorpe
  float left
  height 100%
  padding 0px 6px
  font-size 1.5em
  border-right 1px solid color-grey-80

.user-tags-list
  margin-top 2em
  display flex
  flex-direction row
  justify-content space-between
  flex-wrap wrap

  >li
    text-transform uppercase
    flex-basis 30%
    margin .25em .5em
    padding .6em

    &:nth-child(even)
      flex-grow 2


/*
 * Palette variations
 */

.palette-0

  .user-coffee-card,
  &.user-coffee-card
    background-color color-green-3

  >.tags-container
    background-color color-green-3a

  .tag-octothorpe
    background-color color-green-3b

  .user-tags-list > li
    border 1px solid color-green-3

.palette-1

  .user-coffee-card,
  &.user-coffee-card
    color color-white
    background-color color-green-1

  >.tags-container
