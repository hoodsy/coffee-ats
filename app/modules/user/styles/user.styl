@import 'colors'

.user-coffee-card
  padding 1em 0 0 0
  background-color color-people-50

  .tags-container
    background-color color-people-55

.tags-container
  margin-top 20px
  height 2em

.tag-octothorpe
  float left
  height 100%
  padding 0px 6px
  font-size 1.5em
  background-color color-people

.tags-list
  height 100%
  list-style-type none
  margin 0
  padding 0
  display flex
  flex-direction row
  justify-content space-around

  li
    width 100%
    height 100%
    border-left 1px solid color-grey-80
    line-height 2em
