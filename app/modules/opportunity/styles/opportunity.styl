@import "colors"

.cursorPointer
  cursor: pointer

.st-sort-ascent, .st-sort-descent
  text-decoration: underline

.st-selected
  background-color: AliceBlue

img.rounded
  border-radius 50%
  height: 50px
  width: 50px

.opportunity-infobox
  border 1px solid color-blue-1
  padding 1em
  margin-bottom .5em

.opportunity-coffee-card
  padding 1em 0 0 0

  &.index-0
    color-grey-30
    background-color color-blue-3
    >.tags-container
      background-color color-blue-3a
  &.index-1
    color color-white
    background-color color-blue-1
    >.tags-container
      background-color color-blue-1a
  &.index-2
    color color-white
    background-color color-blue-2
    >.tags-container
      background-color color-blue-2a
