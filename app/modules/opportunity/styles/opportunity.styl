@import 'colors'
@import 'layout'

opportunity-post-card-margin = 0.5em
opportunity-post-card-info-height = 7em
opportunity-post-card-main-height = (2*opportunity-post-card-info-height) + opportunity-post-card-margin
opportunity-post-card-info-height-xs = 2em

.jumbo-count
  font-size 3em

.opportunity-infobox
  padding 1em
  margin-bottom .5em
  color color-grey-10
  font-size 1.1em

/*
 * Opportunity Billing
 */

input[type=number]
  width 40px

.billing-page-checkbox
  -webkit-appearance checkbox !important
  height 20px
  width 20px

@media (max-width: screen-xs-max)
  .billing-page-purchase
    font-size 14px

/*
 * Opportunity Post cards
 */

.opportunity-post-card
  overflow-x hidden

.opportunity-post-card-controls
  position absolute
  right 0
  transition right .2s ease-in-out

  &.grow[class*='col-']
    position absolute
    right -150px


.add-opportunity-post-card
  background-color color-white
  color color-grey-70
  height 10em
  margin-bottom 1px

  @media (min-width: screen-sm-min)
    margin-bottom 1em


.opportunity-post-card-main
  height opportunity-post-card-main-height
  position relative
  left 0
  transition left .2s ease-in-out

  &.slide-left
    position relative
    left -150px

  @media (min-width: screen-sm-min)
    background-color color-white


.row.opportunity-post-card-info

  @media (min-width: screen-sm-min)
    margin-right opportunity-post-card-margin
    height opportunity-post-card-info-height

    &:first-child
      margin-bottom opportunity-post-card-margin

  @media (max-width: screen-xs-max)
    height opportunity-post-card-info-height-xs

    > div:first-child
      border-right 1px solid color-grey-80

/*
 * Palette variations
 */

.palette-0

  .row.opportunity-post-card-info
    background-color color-blue-3a

  @media (max-width: screen-xs-max)
    &.opportunity-post-card
      color color-grey-30
      background-color color-blue-3

  @media (min-width: screen-sm-min)
    .opportunity-post-card-img-container
      background linear-gradient(to right, color-blue-3 50%, rgba(0,0,0,0) 50%)

  .opportunity-post-card-info,
  .opportunity-card,
  &.opportunity-card,
  &.opportunity-edit-form .edit-page-header,
  &.opportunity-edit-form .edit-page-btn,
  &.opportunity-edit-form .edit-submit-btn
    color color-grey-30
    background-color color-blue-3

    >.tags-container
      background-color color-blue-3a

  .opportunity-infobox,
  .opportunity-detail-tags-list > li
    border 1px solid color-blue-3a

  &.opportunity > .match-card-avatar
    background-color color-blue-3

