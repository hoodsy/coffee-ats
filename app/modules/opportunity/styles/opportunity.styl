@import "colors"

.cursorPointer
  cursor: pointer

.st-sort-ascent, .st-sort-descent
  text-decoration: underline

.st-selected
  background-color: AliceBlue

img.rounded
  border-radius 50%
  height: 50px
  width: 50px

.opportunity-infobox
  padding 1em
  margin-bottom .5em

.opportunity-coffee-card
  padding 1em 0 0 0


/*
 * Palette variations
 */

.palette-0

  .opportunity-coffee-card,
  &.opportunity-coffee-card
    color-grey-30
    background-color color-blue-3

    >.tags-container
      background-color color-blue-3a

  .opportunity-infobox,
  .opportunity-detail-tags-list > li
    border 1px solid color-blue-3a

.palette-1

  .opportunity-coffee-card,
  &.opportunity-coffee-card
    color color-white
    background-color color-blue-1

    >.tags-container
      background-color color-blue-1a

  .opportunity-infobox,
  .opportunity-detail-tags-list > li
    border 1px solid color-blue-1a

.palette-2

  .opportunity-coffee-card,
  &.opportunity-coffee-card
    color color-white
    background-color color-blue-2

    >.tags-container
      background-color color-blue-2a

  .opportunity-infobox,
  .opportunity-detail-tags-list > li
    border 1px solid color-blue-2a
