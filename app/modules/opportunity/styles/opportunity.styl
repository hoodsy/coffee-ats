      background linear-gradient(to right, color-blue-1 50%, rgba(0,0,0,0) 50%)

  .opportunity-post-card-info,
  .opportunity-card,
  &.opportunity-card,
  &.opportunity-edit-form .edit-page-header,
  &.opportunity-edit-form .edit-page-btn,
  &.opportunity-edit-form .edit-submit-btn
    color color-white
    background-color color-blue-1

    >.tags-container
      background-color color-blue-1a

  .opportunity-infobox,
  .opportunity-detail-tags-list > li
    border 1px solid color-blue-1a

  &.opportunity > .match-card-avatar
    background-color color-blue-1

.palette-2

  .row.opportunity-post-card-info
    background-color color-blue-2a

  @media (max-width: screen-xs-max)
    &.opportunity-post-card
      color color-white
      background-color color-blue-2

  @media (min-width: screen-sm-min)
    .opportunity-post-card-img-container
      background linear-gradient(to right, color-blue-2 50%, rgba(0,0,0,0) 50%)

  .opportunity-post-card-info,
  .opportunity-card,
  &.opportunity-card,
  &.opportunity-edit-form .edit-page-header,
  &.opportunity-edit-form .edit-page-btn,
  &.opportunity-edit-form .edit-submit-btn
    color color-white
    background-color color-blue-2

    >.tags-container
      background-color color-blue-2a

  .opportunity-infobox,
  .opportunity-detail-tags-list > li
    border 1px solid color-blue-2a

  &.opportunity > .match-card-avatar
    background-color color-blue-2


// Filled job palette
.palette-filled

  .row.opportunity-post-card-info
    color color-white
    background-color color-grey-2a

  @media (max-width: screen-xs-max)
    &.opportunity-post-card
      color color-white
      background-color color-grey-2

  @media (min-width: screen-sm-min)
    .opportunity-post-card-img-container
      background linear-gradient(to right, color-grey-2 50%, rgba(0,0,0,0) 50%)


// pre-palette (new opportunity)
