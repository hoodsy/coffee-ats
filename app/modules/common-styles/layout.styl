screen-sm-min = 992px
screen-md-min = 992px
screen-lg-min = 1200px

screen-xs-max = (screen-sm-min - 1)
screen-sm-max = (screen-md-min - 1)
screen-md-max = (screen-lg-min - 1)


/**
 * Navbar
 */

navbar-height = 54px


/**
 * Detail
 */

detail-width = 425px


/**
 * Coffee Card
 */

tags-height = 2em
card-img-container-height = 6.25em
card-quote-font-size = 3em

// sm+ heights
img-height = 5em
card-quote-height = 17.5em
card-main-text-height = 3em

// xs heights
img-height-xs = 3.75em
card-quote-height-xs = 7em
card-main-text-height-xs = 5.5em

// Total height
card-total-height = card-img-container-height + card-quote-height + card-main-text-height
