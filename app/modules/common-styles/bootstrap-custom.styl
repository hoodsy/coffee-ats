@import 'colors'
@import 'layout'

/*
 * In this file we override Bootstrap framework variables.
 * Note that Bootstrap variables being with a dollar sign ($)
 */

// Font
@font-face
  font-family 'avenir'
  src url('../fonts/AvenirNextLTPro-Regular.ttf') format('truetype')

$font-family-base = 'avenir', serif

$font-size-base = 14px
$font-size-h1 = floor(($font-size-base * 1.25))
$font-size-h2 = floor(($font-size-base * 1.1))
$font-size-h3 = $font-size-base
$font-size-h4 = ceil(($font-size-base * .95))
$font-size-h5 = ceil(($font-size-base * .9))
$font-size-h6 = ceil(($font-size-base * 0.85))

$text-color = color-grey-30

// Sizes
$screen-sm-min = screen-sm-min
$screen-md-min = screen-md-min
$screen-lg-min = screen-lg-min

$screen-xs-max = (screen-sm-min - 1)
$screen-sm-max = (screen-md-min - 1)
$screen-md-max = (screen-lg-min - 1)


// Navbar
$navbar-padding-vertical = 10px
$navbar-inverse-bg = color-grey-30

$navbar-inverse-color = color-grey-90
$navbar-inverse-link-color = color-grey-90
$navbar-inverse-link-hover-color = color-green-2
$navbar-inverse-link-active-color = color-green-2

//$navbar-inverse-link-hover-bg
//$navbar-inverse-link-active-bg


// Border radius
$border-radius-base = 0
$border-radius-large = 0
$border-radius-small = 0


// Button
$btn-default-color = color-grey-90
$btn-default-bg = color-grey-50
$btn-default-border = color-grey-50


// Modals
$modal-inner-padding = 0
$modal-content-bg = black
$modal-content-border-color = black
$modal-content-fallback-border-color = black


/*
 * Import Bootstrap after overriding variables above
 */
@import 'bootstrap'
